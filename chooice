<script>
	var canvas = document.getElementById('canvas');
	var W = window.innerWidth * 1, H = window.innerHeight * 0.4;
	canvas.width = W;
	canvas.height = H;

	var context = canvas.getContext('2d');
	
	function drawText(color, text, size) {
		context.clearRect(0, 0, W, H);
		context.fillStyle = color;
		console.log(size);
		context.font = "bold " + (size || W * 0.08) + "px '字体','字体','微软雅黑','宋体'";
		context.textBaseline = 'hanging';
		context.textAlign = 'center'; 
		context.fillText(text, W * 0.5, H * 0.3);
	}

	var index = 0;
	var timer = setInterval(function() {
		eval( "(" + arr[index] + ")");
		// arr[index];
		console.log(index);
		index ++;
		if (index >= arr.length) {
			clearInterval(timer);
		}
	}, 1200);

	var zzCount = 0, xaCount = 0, num = 0;
	for (var i = 0; i < 10000; i++) {
		num = Math.random();
		if (num > 0.5) {
			zzCount ++;
		}
		if (num < 0.5) {
			xaCount ++;
		}
	}

	var place = '都一样';
	if (zzCount > xaCount) {
		place = '郑 州';
	}
	if (xaCount > zzCount){
		place = '西 安';
	}
	console.log("郑州:" +zzCount, "西安:" +xaCount);

	var size = W * 0.3;

	var arr = [
		"drawText('#666', '听说你在纠结到底去哪里')",
		"drawText('#666', '西安 VS 郑州')",
		"drawText('#666', '我觉得这不是一个问题')",
		"drawText('#666', '什么？你说这没有帮助？')",
		"drawText('#666', '那我用科学的方法告诉你')",
		"drawText('#666', '根据10000次随机结果显示')",
		"drawText('green', '" + place + "', " + W * 0.16 + ")",
	];

</script>
